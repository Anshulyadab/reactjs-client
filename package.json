{
  "name": "postgres-react-app",
  "version": "1.0.0",
  "description": "React app with PostgreSQL database connection",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run check-ports && node scripts/start-dev.js",
    "dev:simple": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "vercel-build": "npm run install-client && npm run build",
    "vercel-dev": "npm run dev",
    "get-credentials": "node scripts/get-vercel-credentials.js",
    "check-ports": "node scripts/check-ports.js",
    "deploy": "scripts/deploy.bat",
    "deploy:unix": "scripts/deploy.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "vercel": "^48.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "react",
    "postgresql",
    "express",
    "node"
  ],
  "author": "",
  "license": "MIT"
}
