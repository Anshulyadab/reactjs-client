# ===========================================
# PostgreSQL React App - Environment Variables
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Primary Database Connection (Neon recommended for production)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Alternative Database Connection (for custom PostgreSQL)
NEON_DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Individual Database Parameters (alternative to connection string)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=testdb
DB_PASSWORD=your_password_here
DB_PORT=5432

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Port (default: 5000)
PORT=5000

# Environment (development, test, production)
NODE_ENV=development

# Port Configuration (optional - defaults will be used if not set)
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (default: 24h)
JWT_EXPIRES_IN=24h

# Default Admin Password (CHANGE THIS IN PRODUCTION!)
ADMIN_PASSWORD=admin123

# ===========================================
# ENCRYPTION
# ===========================================

# Encryption Key for Sensitive Data (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Request Logging
ENABLE_REQUEST_LOGGING=true

# ===========================================
# FILE UPLOAD
# ===========================================

# Maximum File Upload Size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================

# Enable Debug Mode
DEBUG=true

# Test Database URL (for running tests)
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/testdb

# Mock External Services in Tests
MOCK_EXTERNAL_SERVICES=true

# ===========================================
# PRODUCTION SPECIFIC
# ===========================================

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Trust Proxy (for reverse proxies like nginx)
TRUST_PROXY=true

# Session Secret (for production)
SESSION_SECRET=your-session-secret-key

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_DOCUMENTATION=true
ENABLE_METRICS_COLLECTION=true

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ===========================================
# MONITORING & ALERTS
# ===========================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Error Reporting (Sentry)
SENTRY_DSN=your-sentry-dsn

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# API CONFIGURATION
# ===========================================

# API Version
API_VERSION=v1

# API Rate Limits
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# Cache Type (memory, redis, none)
CACHE_TYPE=memory

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_FROM=noreply@yourapp.com

# Push Notifications (if implemented)
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=your-fcm-server-key

# ===========================================
# ANALYTICS & TRACKING
# ===========================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Custom Analytics
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=https://analytics.yourapp.com

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Hot Reload (for development)
HOT_RELOAD=true

# Source Maps (for debugging)
GENERATE_SOURCE_MAPS=true

# Database Seeding
SEED_DATABASE=false
SEED_DATA_PATH=./seeds

# ===========================================
# SECURITY HEADERS
# ===========================================

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=https://your-app.com/csp-report

# HSTS (HTTP Strict Transport Security)
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Custom Application Settings
APP_NAME=PostgreSQL React App
APP_DESCRIPTION=A comprehensive PostgreSQL management application
APP_VERSION=1.0.0
APP_AUTHOR=Your Name
APP_URL=https://your-app.vercel.app

# Custom Business Logic
MAX_USERS_PER_ACCOUNT=100
MAX_DATABASES_PER_USER=10
MAX_CONNECTIONS_PER_DATABASE=20

# ===========================================
# NOTES
# ===========================================
# 
# 1. NEVER commit the actual .env file to version control
# 2. Always use strong, unique secrets in production
# 3. Rotate secrets regularly for security
# 4. Use environment-specific values for different deployments
# 5. Test all configurations in a staging environment first
# 
# For production deployment:
# - Use a secure secret management service
# - Enable all security features
# - Set up proper monitoring and logging
# - Configure automated backups
# - Use HTTPS everywhere
# 
# ===========================================